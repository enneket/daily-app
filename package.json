{
  "name": "daily-report-app",
  "version": "1.0.3",
  "description": "跨平台日报桌面应用",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "electron:dev": "cross-env NODE_ENV=development tsc -p tsconfig.main.json && electron . --no-sandbox",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:site": "vitepress build site",
    "dev:site": "vitepress dev site",
    "preview:site": "vitepress preview site",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl"
  },
  "keywords": [
    "electron",
    "daily-report",
    "github"
  ],
  "author": {
    "name": "enneket",
    "email": "zhao.jiaxing@qq.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitepress": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.dailyreport.app",
    "productName": "DailyReport",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "site/**/*",
      "scripts/**/*",
      "docs/日报仓库README模板.md",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "compression": "maximum",
    "publish": null,
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "identity": null,
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "enneket",
      "maintainer": "Your Name <zhao.jiaxing@qq.com>",
      "icon": "build/icon.png"
    }
  }
}
